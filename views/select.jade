extends ./layout
      
block content
  .page
    .header(style="padding:2em 0;")
      h1.page_title(style="text-align:center;font-size:24px;color:#3CC51F;font-weight:400;margin:0 15%;") #{title}
      
    - if (selectedTime)
      .weui_cells_title 当前已选时间
      .weui_cells
        .weui_cell
          .weui_cell_primary #{selectedTime}

    form(name="selectTime")
      .weui_cells_title(style="margin-top: 50px;") 待选列表
      .weui_cells.weui_cells_radio
        each time in times
          - if (time.disabled)
            label.weui_cell.weui_check_label.weui_check_disabled(for='#{time.id}')
              .weui_cell_bd.weui_cell_primary
                p #{time.value}
              .weui_cell_ft
                - if (time.checked)
                  input.weui_check(type='radio' name='time' id='#{time.id}' checked disabled)
                - else
                  input.weui_check(type='radio' name='time' id='#{time.id}' disabled)
                span.weui_icon_checked
          - else
            label.weui_cell.weui_check_label(for='#{time.id}')
              .weui_cell_bd.weui_cell_primary
                p #{time.value}
              .weui_cell_ft
                - if (time.checked)
                  input.weui_check(type='radio' name='time' id='#{time.id}' checked)
                - else
                  input.weui_check(type='radio' name='time' id='#{time.id}')
                span.weui_icon_checked
    
    a.weui_btn.weui_btn_primary.submit.submit-select-time(href='#') 提交

  script(src='/static/js/bundle.js')
